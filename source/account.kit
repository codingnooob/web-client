<!DOCTYPE html>
<html class="is-loading" data-loading="One moment please">
<head>

  <!-- @import "app-head.kit" -->
  <title>Cryptee | Account Settings</title>
  <script src="../js/lib/zxcvbn.min.js"></script>

</head>
<body class="account-body is-loading">

  <div class="columns is-mobile is-vcentered">
    <div class="account-column column is-10 is-offset-1" style="height:100%; padding:0;">

      <nav class="level" style="padding-top: 12px;">
        <div class="level-left">
          <div class="level-item level-left" style="margin-left:10px;">
            <div class="settings-tabs tabs is-small"> <!-- you can also make this is-centered -->
              <ul>
                <li title="Dashboard"> <a class="top-left-icon" href="home"><i class="top-menu-icons fa fa-fw fa-th-large"></i></a></li>
                <li title="Documents" class="hiddenForFinger"> <a class="top-left-icon" href="docs"><i class="top-menu-icons fa fa-fw fa-file"></i></a></li>
                <li title="Photos" class="hiddenForFinger"> <a class="top-left-icon" href="photos"><i class="top-menu-icons fa fa-fw fa-picture-o"></i></a></li>
                <li title="Account Settings" class="is-active"> <a class="top-left-icon" href="account"><i class="top-menu-icons fa fa-fw fa-cog"></i></a></li>
                <li title="Sign Out" id="acct-signout"> <a class="top-left-icon" onclick="signOut();"><i class="top-menu-icons fa fa-fw fa-sign-out"></i></a></li>
              </ul>
            </div>
          </div>
        </div>
        <div class="settings-top-right level-right">
          <div class="level-item has-text-centered is-hidden-touch">
            <p><span class="icon"><i class="fa fa-fw fa-user"></i></span>&nbsp;<span id="account-username"></span></p>
          </div>
          <div class="level-item has-text-centered" id="navbar-email" style="display:none;">
            <p><span class="icon"><i class="fa fa-fw fa-envelope"></i></span>&nbsp;<span id="account-email"></span></p>
          </div>
          <div class="level-item has-text-centered" id="navbar-phone" style="display:none;">
            <p><span class="icon"><i class="fa fa-fw fa-phone"></i></span>&nbsp;<span id="account-phone"></span></p>
          </div>
          <div class="level-item has-text-centered" id="navbar-card" style="display:none;">
            <p><span class="icon"><i class="fa fa-fw fa-id-card"></i></span>&nbsp;<span id="account-personal-code"></span></p>
          </div>
          <div class="level-item has-text-centered">
            <p><span class="icon"><i class="fa fa-fw fa-tachometer"></i></span>&nbsp;<span id="settings-storage-used"></span> / <span class="settings-storage-total"></span></p>
          </div>
        </div>
      </nav>

      <div class="columns">

        <div class="column is-one-quarter settings-left-column">
          <p class="button settings-tab is-fullwidth is-success"  tab="upgrade" id="upgrade-setting">Upgrade</p>
          <p id="settings-my-data-button" class="button settings-tab is-fullwidth is-light is-hidden-webapp is-hidden-tiny"  tab="mydata">My Data</p>
          <p id="settings-preferences-button" class="button settings-tab is-fullwidth is-light"  tab="preferences">My Preferences</p>
          <p class="button settings-tab is-fullwidth is-light paid-plan-only"  tab="planpayment" id="plan-setting">Plan &amp; Payment Settings</p>
          <p id="paymenthistorybutton" class="button settings-tab is-fullwidth is-light"  tab="history">Payment History</p>
          <!-- <p class="button settings-tab is-fullwidth is-light"  tab="loginsettings">Login Settings</p> -->
          <p id="changepassbutton" class="button settings-tab is-fullwidth is-light"  tab="changepass">Change Password</p>
          <p id="changekeybutton" class="button settings-tab is-fullwidth is-light"  tab="changekey">Change Encryption Key</p>
          <p id="recoveryemailbutton" class="button settings-tab is-fullwidth is-light"  tab="recovery">Recovery Email</p>
          <p id="settings-delete-acct-button" class="button settings-tab is-fullwidth is-light is-hidden-webapp"  tab="delete">Delete Account</p>
          <p class="is-hidden-touch"><a href="/" class="footer-logo"><img src="../assets/cryptee-logo-b.svg" alt="Cryptee logo"></a> &nbsp; <span class="cryptee-latest-deploy-version"></span> - <a href="https://cryptee.kayako.com" target="_blank" class="openInSafari">support</a> - <a onclick="reportBug()">report bug</a></p>
          <p class="is-hidden-touch">&nbsp; <b class="clickable" onclick="showModal('donate-modal');">Donate</b> -  We can use your help.</p>
        </div>




        <div class="column">

          <div class="notification is-danger"  id="noemail" style="display:none;">
            <p class="title">Verify Your Email</p>
            <p class="subtitle"><br>Your email is not verified. Please check your inbox to verify your email.<br>If you didn't get the verification email, you can try resending it.</p>
            <p class="button is-white" onclick="verifyEmail()" id="verify-email-button">Resend Email</p>
          </div>

          <div class="settings-tab-contents notification active" id="account-tab-contents">
            <!-- @import "settings-tab-account.kit" -->
          </div>

          <div class="settings-tab-contents notification" id="planpayment-tab-contents">
            <!-- @import "settings-tab-planpayment.kit" -->
          </div>

          <div class="settings-tab-contents notification" id="history-tab-contents">
            <!-- @import "settings-tab-history.kit" -->
          </div>

          <div class="settings-tab-contents notification" id="loginsettings-tab-contents">
            <!-- @import "settings-tab-loginsettings.kit" -->
          </div>

          <div class="settings-tab-contents notification" id="changepass-tab-contents">
            <!-- @import "settings-tab-changepass.kit" -->
          </div>

          <div class="settings-tab-contents notification" id="changekey-tab-contents">
            <!-- @import "settings-tab-changekey.kit" -->
          </div>

          <div class="settings-tab-contents notification" id="recovery-tab-contents">
            <!-- @import "settings-tab-recovery.kit" -->
          </div>

          <div class="settings-tab-contents notification is-danger" id="delete-tab-contents">
            <!-- @import "settings-tab-delete.kit" -->
          </div>

          <div class="settings-tab-contents upgrade-setting " id="upgrade-tab-contents">
            <!-- @import "settings-tab-upgrade.kit" -->
          </div>

          <div class="settings-tab-contents notification mydata-setting" id="mydata-tab-contents">
            <!-- @import "settings-tab-mydata.kit" -->
          </div>

          <div class="settings-tab-contents notification preferences-setting" id="preferences-tab-contents">
            <!-- @import "settings-tab-preferences.kit" -->
          </div>

          <div class="notification is-danger" id="reauth-error" style="display:none;">

          </div>
          <br class="is-hidden-desktop">
          <hr class="is-hidden-desktop">
          <p class="is-hidden-desktop">Cryptee <span class="cryptee-latest-deploy-version"></span> - <a href="https://cryptee.kayako.com" target="_blank" class="openInSafari">support</a> - <b class="clickable" onclick="showModal('donate-modal');">donate</b></span>

        </div>
      </div>
    </div>
  </div>


  <div id="upgrade-thanks">
    <div class="notification is-success">
      <button class="delete"></button>
      <p class="title">Thank you!</p>
      <p>We have successfully upgraded your account.</p>
      <p>You can always view your invoices, update your payment methods, payments settings and subscription plan from your account settings.</p>
      <br>
      <p>Once again, thank you for choosing to support us, and helping us defend privacy all over the world.</p>
    </div>
  </div>

  <!-- @import "modal-bump.kit" -->
  <!-- @import "modal-donate.html" -->
  <!-- @import "modal-webapp.kit" -->
  <!-- @import "footer-js.kit" -->
  <script src="../js/account.js"></script>
  <script src="../js/upgrade.js"></script>
</body></html>
