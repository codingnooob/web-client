  <!-- @import "account-app-nav.kit" -->

  <div class="columns account-columns is-multiline is-centered">

    <div class="column is-4 settings-left-column">
      <div class="left-center">
        <p class="settings-tab is-fullwidth is-white paid-plan-only"  tab="planpayment" id="plan-setting">Plan &amp; Payment Settings</p>
        <p id="changekeybutton" class="settings-tab is-fullwidth is-white"  tab="changekey">Change Encryption Key</p>
        <p id="changepassbutton" class="settings-tab is-fullwidth is-white"  tab="changepass">Change Password</p>
        <p id="paymenthistorybutton" class="settings-tab is-fullwidth is-white"  tab="history">Payment History</p>
        <p id="settings-preferences-button" class="settings-tab is-fullwidth is-white"  tab="preferences">My Preferences</p>
