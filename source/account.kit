        <p id="settings-my-data-button" class="settings-tab is-fullwidth is-white is-hidden-webapp is-hidden-tiny"  tab="mydata">My Data</p>
        <p id="settings-delete-acct-button" class="settings-tab is-fullwidth is-white is-hidden-webapp"  tab="delete">Delete Account</p>
        <p class="vers"><span class="cryptee-latest-deploy-version"></span></p>
      </div>
    </div>

    <div class="column is-4 is-hidden-tiny"></div>
    
    <div class="column is-4 settings-right-column">

      <div class="notification is-danger crypteecard"  id="noemail" style="display:none;">
