<div id="quick-exit" onclick="quickExit();">
    <i class="ri-arrow-right-up-line"></i>
    <span><strong>QUICK EXIT</strong> [ ESC ]</span> 
</div>

<script>
    function quickExit() { window.location.replace("https://google.com"); }
    document.onkeyup = function(e) { 
        if (e.key === "Escape") { quickExit(); } 
    };
</script>