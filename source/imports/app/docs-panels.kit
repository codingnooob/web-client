<div class="panel centered hidden" id="panel-new-doc">
    <h3>NEW DOCUMENT</h3>
    <p class="gray">what would you like to name it?</p>
    <div class="creation-folder-and-input">
        <p id="new-doc-target-folder"></p>
        <input type="search" id="new-doc-input" class="darkback" placeholder="untitled document" autocomplete="off" spellcheck="false">
    </div>
    <div id="new-doc-recos"></div>
    <button class="confirm" id="confirmNewDocButton" onclick="confirmNewDoc();">
        <!-- @import "../../assets/doc-blank.svg" -->
        blank document
    </button>
    <button class="confirm" id="confirmNewTemplatedDocButton" onclick="confirmNewDocFromTemplate();">
        <!-- @import "../../assets/doc-template.svg" -->
        use a template
    </button>
    <small class="hints"></small>
</div>

<div class="panel centered hidden" id="panel-copy-doc" did="">
    <h3>MAKE A COPY</h3>
    <p>what would you like to name it?</p>
    <div class="creation-folder-and-input">
        <p id="copy-doc-target-folder"></p>
        <input type="search" id="copy-doc-input" class="darkback" placeholder="untitled document" autocomplete="off" spellcheck="false">
    </div>
    <div id="copy-doc-recos"></div>
    <button class="confirm" id="confirmCopyDocButton" onclick="confirmCopyDoc();"><img src="../assets/cross.svg" alt="close" title="copy document"></button>
    <small class="hints"></small>
</div>

<div class="panel centered hidden" id="panel-new-folder">
    <h3>NEW FOLDER</h3>
    <p>what would you like to name it?</p>
    <input type="search" id="new-folder-input" class="darkback" placeholder="untitled folder" autocomplete="off">
    <button class="confirm" id="confirmNewFolderButton"><img src="../assets/cross.svg" alt="close" title="create new folder" onclick="confirmNewFolder();"></button>
</div>

<div class="panel centered hidden" id="link-box">
    <h3>ADD LINK</h3>
    <p>enter the link below</p>
    <input type="url" id="hyperlink-input" class="darkback" placeholder="https://crypt.ee" autocomplete="off" name="url" spellcheck="false">
    <button class="confirm"><img src="../assets/cross.svg" alt="close" title="add link" onclick="confirmEmbed('link');"></button>
</div>

<div class="panel centered hidden" id="add-table">
    <div id="table-picker-header">
        <h2>ADD<br>TABLE</h2>
        <p>
            <span id="table-selected-cols">0</span>
            <span class="gray">x</span>
            <span id="table-selected-rows">0</span>
        </p>
    </div>
    <div id="table-picker"></div>
</div>

<div class="panel centered hidden" id="panel-embedding-image">
    <h3>EMBEDDING<BR>IMAGE</h3>
    <p>one moment please</p>
    <progress id="embedding-image" class="progress"></progress>
</div>

<div class="panel corner persistent" id="panel-uploads"></div>