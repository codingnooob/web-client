<!DOCTYPE html>
<html lang="en">

<head>
    <!-- @import "imports/app/head.kit" -->

    <title>Cryptee | Home</title>
    <link rel="stylesheet" href="../css/home.css">
</head>

<body class="app-body fixed">

    <img id="logo" src="../assets/logo-b.svg" alt="CRYPTEE" draggable="false" class="rememberKey">
    
    <p id="displayName">
        <span>welcome home,</span>
        <span class="username"></span>
    </p>

    <!-- apps -->
    <main>
        <a class="appButton plain rememberKey" href="/docs" app="docs">
            <img src="../assets/square.svg" alt="docs" draggable="false">
            <span>DOCS</span>
        </a>

        <a class="appButton plain rememberKey" href="/photos" app="photos">
            <img src="../assets/circle.svg" alt="photos" draggable="false">
            <span>PHOTOS</span>
            <!-- <span class="callout" which="home-video" date="July 30, 2022" until="Jan 15, 2023">& videos</span> -->
        </a>
    </main>

    <!-- actions -->
    <footer>
        <a class="actionButton plain clickable" app="install" style="display:none;" onclick="showTip('tips-install-pwa');">
            <img src="../assets/cross.svg" alt="install" draggable="false">
            <span>INSTALL APP</span>
        </a>
        
        <a class="actionButton plain" href="/plans" app="upgrade" style="display:none;">
            <img src="../assets/triangle.svg" alt="upgrade" draggable="false">
            <span>UPGRADE</span>
        </a>
    </footer>

    <nav>
        <p class="menuButton" id="accountButton">
            <a class="plain" href="/account" title="account / settings">settings</a>
        </p>
        
        <p class="menuButton newsButton" id="topNewsButton" onclick="showLatestNewsCard();">news</p>
    
        <p class="menuButton" id="helpButton">
            <a class="plain" href="/help" title="get help">help</a>
        </p>

        <button class="menuButton" id="logoutButton" onclick="logOut();">log out</button>
    </nav>
    
    <a id="offerButton" class="offerButton" href="/plans"></a>

    <aside id="news-card">
        <div>
            <button class="close" onclick="markNewsRead();"><img src="../assets/cross.svg" alt="close" title="close news"></button>
            <strong>WHAT'S NEW</strong>
            <p>excerpt</p>
            <a class="more plain external" target="_blank" rel="noopener" title="news and product updates" onclick="markNewsRead();">
                <span>read more</span>
                <i class="ri-arrow-right-line"></i>
            </a>
        </div>
    </aside>
    
    <div id="create-popups-before-placeholder" style="display: none !important;"></div>
    
    <!-- @import "imports/app/home-tips.kit" -->

    <!-- @import "imports/app/footer.kit" -->

    <script src="../js/home.js"></script>

</body></html>
