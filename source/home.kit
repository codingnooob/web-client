<!DOCTYPE html>
<html lang="en">

<head>
    <!-- @import "imports/app/head.kit" -->

    <title>Cryptee | Home</title>
    <link rel="stylesheet" href="../css/home.css">
</head>

<body class="app-body fixed">

    <img id="logo" src="../assets/logo-b.svg" alt="CRYPTEE" draggable="false" class="rememberKey">
    
    <main>

        <p class="appButton" app="docs">
            <a class="plain rememberKey" href="/docs">
                <img src="../assets/square.svg" alt="docs" draggable="false">
                <span>documents</span>
            </a>
        </p>
    
        <p class="appButton" app="photos">
            <a class="plain rememberKey" href="/photos">
                <img src="../assets/circle.svg" alt="photos" draggable="false">
                <span>photos</span>
            </a>
        </p>

        <p class="appButton" app="install" style="display:none;" onclick="showTip('tips-install-pwa');">
            <a class="plain clickable">
                <img src="../assets/cross.svg" alt="install" draggable="false">
                <span>install app</span>
            </a>
        </p>

        <p class="appButton green" app="upgrade" style="display:none;">
            <a class="plain" href="/plans">
                <img src="../assets/triangle.svg" alt="upgrade" draggable="false">
                <span>upgrade</span>
            </a>
        </p>

        <b></b>

        <p id="welcome">
            welcome home<br>
            <span id="displayName" class="username"></span>
        </p>

    </main>

    <nav>
        <p class="menuButton newsButton" id="topNewsButton">
            <a class="plain external" href="https://blog.crypt.ee#to-cryptee" target="_blank" rel="noopener" title="news and product updates" onclick="markNewsRead();">news</a>
        </p>

        <p class="menuButton" id="accountButton">
            <a class="plain" href="/account" title="account / settings">settings</a>
        </p>
    
        <p class="menuButton" id="helpButton">
            <a class="plain" href="/help" title="get help">help</a>
        </p>
    
        <button class="menuButton" id="logoutButton" onclick="logOut();">log out</button>
    </nav>
    
    <p id="bottomNewsButton" class="newsButton">
        <a class="plain external" href="https://blog.crypt.ee#to-cryptee" target="_blank" rel="noopener" onclick="markNewsRead();">news</a>
    </p>

    <a id="offerButton" class="offerButton" href="/plans"></a>


    
    <div id="create-popups-before-placeholder" style="display: none !important;"></div>
    
    <!-- @import "imports/app/home-tips.kit" -->

    <!-- @import "imports/app/footer.kit" -->

    <script src="../js/home.js"></script>

</body></html>
